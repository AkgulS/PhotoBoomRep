@using PhotoBoomApplicationCore.Domain

@model List<Photo>
<div class="row">
    <div class="col-sm-12" style="text-align:center; justify-content:center">
        <div class="text-center">
            <h1 class="display-4">My Photos</h1>
            @if (Model.Count() > 0)
            {<div class="row">
                    @foreach (var photo in Model)
                    {

                        <div class="col-sm-3">
                            <a href="/Home/ViewPhoto/?Id=@photo.Id"> <img src="/Uploads/@photo.PhotoName" style="max-height:100%; max-width:100%" /></a>
                        </div>

                    }
                </div>
            }
            else
            {
                <h4>You don’t have any photos yet ;(</h4>

            }
            <br />
            <p><a href="/Home/AddPhoto">Add photo </a></p>
        </div>
    </div>
</div>
